<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.carlos.proyecto2ab.Menu"
    android:background="#768275">

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Mi Presupuesto"
        android:id="@+id/presupuesto1"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:onClick="darclick1" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Balance"
        android:id="@+id/balance1"
        android:layout_marginTop="103dp"
        android:layout_below="@+id/presupuesto1"
        android:layout_alignLeft="@+id/presupuesto1"
        android:layout_alignStart="@+id/presupuesto1"
        android:layout_alignRight="@+id/presupuesto1"
        android:layout_alignEnd="@+id/presupuesto1"
        android:onClick="darclick3" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Ahorro"
        android:id="@+id/ahorro1"
        android:layout_marginTop="112dp"
        android:layout_below="@+id/balance1"
        android:layout_alignLeft="@+id/balance1"
        android:layout_alignStart="@+id/balance1"
        android:layout_alignRight="@+id/balance1"
        android:layout_alignEnd="@+id/balance1"
        android:onClick="darclick5" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Mis Gastos"
        android:id="@+id/gastos1"
        android:layout_alignTop="@+id/presupuesto1"
        android:layout_alignLeft="@+id/perfil1"
        android:layout_alignStart="@+id/perfil1"
        android:onClick="darclick2" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Consejos"
        android:id="@+id/consejos1"
        android:onClick="darclick4"
        android:layout_above="@+id/ahorro1"
        android:layout_toEndOf="@+id/balance1" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Mi Perfil"
        android:id="@+id/perfil1"
        android:layout_alignTop="@+id/ahorro1"
        android:layout_toEndOf="@+id/ahorro1"
        android:onClick="darclick6" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Cerrar  sesion"
        android:id="@+id/button19"
        android:onClick="salir"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/perfil1" />


</RelativeLayout>
